# Clawlet Environment Configuration
# Copy this file to .env and fill in your values

# Required: Your wallet private key (hex string starting with 0x)
# NEVER commit your actual private key to git!
CLAWLET_KEY=0x...your-private-key-here...

# Optional: Default network (mainnet, sepolia, optimism, arbitrum, base)
CLAWLET_NETWORK=mainnet

# Optional: Custom RPC URL (uses public RPC if not set)
# CLAWLET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optional: Max transaction value in wei (for guardrails)
# CLAWLET_MAX_TX_VALUE=1000000000000000000

# Optional: Max transactions per hour
# CLAWLET_MAX_TX_PER_HOUR=10
